pipeline {
    agent any
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                dir('./demo') {
                    withMaven(maven: 'Maven 3.9.2') {
                        bat 'mvn clean package'
                    }
                }
            }
        }
        stage('Test') {
            steps {
                dir('./demo') {
                    withMaven(maven: 'Maven 3.9.2') {
                        bat 'mvn test'
                    }
                }
            }
        }
        stage('Docker Build and Run') {
            steps {
                // Change working directory to the location of the Jenkinsfile
                dir('C:\\Users\\TECHCOM\\Desktop\\ISASH-ECommerce-Project\\demo') {
                    // Build and run the Docker image for the payment service
                    script {
                        // Build the Docker image
                        sh 'docker build -t payment .'

                        // Run the Docker container
                        sh 'docker run -d -p 7000:7000 --name payment-container payment'
                    }
                }
            }
        }
}
